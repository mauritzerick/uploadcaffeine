{
  "component_name": "AI Agents System",
  "version": "1.0.0",
  "description": "Interactive draggable AI assistant components with three modes: drag, click (jokes/quotes), and mouse following. Features three unique agents: Coffee Assistant, CPU Assistant, and Stoic Agent.",
  "repository": "uploadcaffeine.com",
  
  "overview": {
    "summary": "A set of three interactive floating AI agent components that provide entertainment, wisdom, and engagement through draggable interfaces, click interactions, and smooth animations.",
    "use_cases": [
      "Website engagement and interactivity",
      "User guidance to support/donation sections",
      "Content delivery (jokes, quotes, wisdom)",
      "Visual appeal and modern UI/UX",
      "Easter egg features"
    ]
  },

  "components": [
    {
      "name": "AmbientAgent",
      "file": "components/AmbientAgent.tsx",
      "variants": ["cpu", "coffee"],
      "description": "Interactive floating agent with jokes and click interactions",
      "props": {
        "icon": {
          "type": "'cpu' | 'coffee'",
          "default": "'cpu'",
          "description": "Icon type determines agent appearance and jokes"
        },
        "initialPosition": {
          "type": "{ x: number; y: number }",
          "optional": true,
          "description": "Initial position on screen (defaults to bottom-right)"
        }
      }
    },
    {
      "name": "StoicAgent",
      "file": "components/StoicAgent.tsx",
      "description": "Wisdom-focused agent displaying random Stoic quotes",
      "props": {
        "initialPosition": {
          "type": "{ x: number; y: number }",
          "optional": true,
          "description": "Initial position on screen (defaults to center-bottom)"
        }
      }
    }
  ],

  "features": {
    "interaction_modes": [
      {
        "mode": "Drag",
        "description": "Click and hold to drag anywhere on screen",
        "implementation": "Framer Motion drag API with constraints",
        "visual_feedback": "Scale increases, glow intensifies, cursor changes to grabbing"
      },
      {
        "mode": "Click",
        "description": "Click to show jokes/quotes, limited to 3 clicks before redirect",
        "implementation": "onClick handler with state management",
        "behavior": "After 3 clicks, shows 'out of energy' message and auto-scrolls to support section"
      },
      {
        "mode": "Mouse Follow",
        "description": "Subtly tracks mouse cursor with 5% sensitivity",
        "implementation": "useMotionValue + useSpring from Framer Motion",
        "disabled_when": "While dragging"
      }
    ],
    "animations": [
      "Floating (gentle up/down bob)",
      "Rotation (icon rotates continuously)",
      "Pulse border (expanding ring effect)",
      "Glow intensity (varies with hover/drag state)",
      "Orbiting particles (sparkles rotate around agent)",
      "Popup animations (spring-based entrance/exit)"
    ],
    "responsiveness": {
      "mobile": "Adapts positioning and popup widths",
      "tablet": "Adjusted spacing and sizes",
      "desktop": "Full feature set with optimal positioning"
    }
  },

  "dependencies": {
    "required": [
      {
        "package": "framer-motion",
        "version": "latest",
        "usage": ["motion.div", "useMotionValue", "useSpring", "AnimatePresence"]
      },
      {
        "package": "lucide-react",
        "version": "latest",
        "icons_used": ["Cpu", "Coffee", "BookOpen", "Sparkles"]
      },
      {
        "package": "react",
        "version": "18+",
        "hooks_used": ["useState", "useEffect"]
      }
    ],
    "optional": [
      {
        "package": "tailwindcss",
        "usage": "Styling (can be adapted to other CSS solutions)"
      }
    ]
  },

